- category_full_names = Category.order_by_knight_score.pluck(:full_name).to_json.html_safe
javascript:
  $('#repo_category_list').select2({tags: #{ category_full_names }, placeholder: 'Which categories does this repo belong to? Which problems does it solve?'});

