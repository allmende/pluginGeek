/ layouts/_head
meta charset='utf-8'

/ dns prefetching
= dns_prefetch_tag('//ajax.googleapis.com')
= dns_prefetch_tag('//www.google-analytics.com')
= dns_prefetch_tag('//google-analytics.com')
= dns_prefetch_tag('//github.com')

/ title and description
title = page_title
meta name='description' content='Notable Plugins for Web and Mobile Development. Like AirBnB but for Space Travel.'

meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'
meta name='viewport' content='width=device-width'
meta name='keywords' content='ruby gems, rubygems, ruby, gem, javascript, ios, cocoapods, find, search, rails, jquery'

/ stylesheets
= stylesheet_link_tag 'application'

/ javascripts
= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.8/jquery.min.js'
= render 'javascripts/javascripts_in_head'
= javascript_include_tag 'application'

/ csrf meta tags
= csrf_meta_tags unless response_publicly_cached?

/ TODO: exclude certain paths (like tos etc.) from indexing via robots.txt
/ meta name='robots' content='index, follow'

